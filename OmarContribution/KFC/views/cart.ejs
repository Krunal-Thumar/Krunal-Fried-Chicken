<h1>Your Cart</h1>
<% if (cart.length === 0) { %>
    <p>Your cart is empty.</p>
<% } else { %>
    <ul>
        <% cart.forEach(item => { %>
            <li>
                <%= item.name %> - AED <%= item.price %> x <%= item.quantity %> = AED <%= item.price * item.quantity %>
            </li>
        <% }); %>
    </ul>
    <p>Total: AED <%= total %></p>
    <form action="/checkout" method="POST">
        <button type="submit">Proceed to Checkout</button>
    </form>
<% } %>

<a href="/">Back to Menu</a>